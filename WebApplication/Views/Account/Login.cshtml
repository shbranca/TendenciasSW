@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}


<div class="m-login__wrapper">
    <div class="m-login__custom">
        <div class="m-login__logo">
            <a href="#">
                @*<img src="~/images/logo.png">*@
                <img src="~/images/Atletik/logo.png" style="width:150px; height:80px;">
            </a>
        </div>
        <ul class="nav nav-tabs nav-fill" role="tablist">
            <li class="nav-item">
                <a class="nav-link active show" data-toggle="tab" href="#m_tabs_1">Iniciar Sesi&oacute;n</a>
            </li> 
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="m_tabs_1" role="tabpanel">
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="m-login__form m-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group m-form__group">
                        <input asp-for="UserName" class="form-control m-input material" placeholder="Usuario" name="username" autocomplete="off" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group m-form__group">
                        <input asp-for="Password" class="form-control m-input m-login__form-input--last" type="password" placeholder="Contrase&ntilde;a" name="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="row m-login__form-sub">
                        <div class="col m--align-left m-login__form-left">
                            <label asp-for="RememberMe" class="m-checkbox  m-checkbox--focus">
                                <input asp-for="RememberMe" type="checkbox" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                                <span></span>
                            </label>
                        </div>
                    </div>
                    <div class="m-login__form-action">
                        <button id="m_login_signin_submit" class="btn btn-primary m-btn m-login__btn m-login__btn--primary">
                            INGRESAR
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial") 
    <script src="~/assets/js/pages/login.js"></script>
}
